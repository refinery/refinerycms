<%= content_tag :div, id: "logo", itemscope: "",  itemtype: "http://schema.org/Organization" do %>
  <%= link_to refinery.root_path, itemprop: "url" do %>
    <%= content_tag :span, { itemprop: "name"} do %>
      <%= Refinery::Core.site_name %>
    <% end %>
  <% end %>
<% end %>

