<div class='form-actions flex align-items-center<%= ' sidebar-section no-border m-t' if in_sidebar %><%= ' form-actions-dialog' if from_dialog? %>'>
  <div class='<%= in_sidebar ? "sidebar-section-body" : "form-actions-left" %>'>
    <%= button_tag "#{'<i class="icon icon-publish m-r-2"></i>' if in_sidebar} <span>#{submit_button_text}</span>".html_safe,
                   :type => :submit,
                   :id => submit_button_id,
                   :name => nil,
                   :class => submit_button_classes,
                   :'data-redirect-url' => defined?(submit_redirect_url) ? "#{submit_redirect_url}" : nil,
                   :tooltip => submit_button_title unless hide_submit %>

    <%= hidden_field_tag :continue_editing, false if continue_editing %>

    <%= link_to(cancel_button_text, cancel_url,
                :title => cancel_title,
                :id => cancel_button_id,
                :class => "btn btn-outline-secondary btn-lg m-b-2") unless hide_cancel %>

    <%= before_delete_button -%>
    <%= button_tag("<i class='icon icon-trash'></i> <span>#{delete_button_text}</span>".html_safe,
        :type                => :button,
        :'data-url'          => delete_url,
        :'data-redirect-url' => delete_redirect_url,
        :'data-text'         => delete_confirmation,
        :title               => delete_title,
        :id                  => delete_button_id,
        :class               => "btn btn-link-red btn-lg delete-modal p-x-1") unless hide_delete %>
    <%= after_delete_button -%>
  </div>
</div>
