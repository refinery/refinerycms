<% content_for :after_javascript_libraries do %>
  <%= javascript_include_tag 'refinery/sortable_list.js' %>
  <%= javascript_include_tag 'refinery/nestedsortables' %>
  <%= javascript_include_tag 'refinery/serializelist' %>
  <%= javascript_include_tag 'refinery/tree.js' %>
<% end %>

<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      create_sortable_list({
        update_url: '<%= update_url ||= refinery.url_for(:action => "update_positions") %>',
        sortable_list: $('#<%= list_id ||= "sortable_list" %>'),
        tree: <%= tree %>
      });
    });
  </script>
<% end %>
