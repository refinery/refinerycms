<% content_for :after_javascript_libraries do %>
  <%= javascript_include_tag 'refinery/nestedsortables' %>
  <%= javascript_include_tag 'refinery/serializelist' %>
  <%= javascript_include_tag 'refinery/tree.js' %>
<% end %>

<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      list_reorder.update_url     = '<%= update_url ||= refinery.url_for(:action => "update_positions") %>';
      list_reorder.sortable_list_selector  = '#<%= list_id ||= "sortable_list" %>, .sortable_list'
      list_reorder.tree           = <%= tree %>;
      list_reorder.init();
    });
  </script>
<% end %>
