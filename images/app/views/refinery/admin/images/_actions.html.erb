<ul>
  <li><%= render '/refinery/admin/search', url: refinery.admin_images_path -%></li>
  <li>
    <%= action_label :add, refinery.new_admin_image_path(dialog: true), t('.create_new_image') %>
  </li>
  <% other_index_views.each do |view| %>
    <li>
      <%= action_label :"switch_view_#{view}",  # reference to the view icon
                        refinery.admin_images_path(view: view, page: params[:page]),
                       I18n.t('switch_to', view_name: view, scope: 'refinery.admin.images.index.view')
      %>
    </li>
  <% end %>
</ul>
