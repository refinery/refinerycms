<ul id="image_grid" class="clearfix">
  <% @images.each_with_index do |image, index| -%>
    <li id="image_<%= image.id %>" class='image_<%= index % 5 %>'>
      <%= image_fu image, :grid, :title => image.title %>
      <span class='actions'>
        <%= link_to refinery_icon_tag('eye.png'), image.url,
                    :target => "_blank",
                    :title => t('.view_live') %>
        <%= link_to refinery_icon_tag('application_edit.png'), edit_admin_image_path(image),
                    :title => t('shared.admin.edit.title', :object_name => image.class.human_name) %>
        <%= link_to refinery_icon_tag('delete.png'), admin_image_path(image),
                    :class => "cancel confirm-delete",
                    :title => t('shared.admin.delete.title', :object_name => image.class.human_name),
                    :'data-confirm' => t('shared.admin.delete.message', :title => image.title),
                    :'data-method' => "delete" %>
      </span>
    </li>
  <% end -%>
</ul>
