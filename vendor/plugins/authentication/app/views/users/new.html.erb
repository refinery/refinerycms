<% content_for :header, "Fill out your details below so that we can get you started." %>
<% form_for :user, :url => users_path do |f| -%>
  <%= f.error_messages %>
  <div class='field'>
    <%= f.label :login %>
    <%= f.text_field :login %>
  </div>
  <div class='field'>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class='field'>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class='field'>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <% if just_installed? %>
    <% Refinery::Plugins.registered.in_menu.titles.sort.each do |plugin| -%>
      <%= hidden_field_tag 'user[plugins][]', plugin, :id => "plugins_#{plugin.downcase.gsub(" ", "_")}" %>
    <% end -%>
  <% end -%>
  <p><%= submit_tag 'Sign up' %></p>
<% end -%>
