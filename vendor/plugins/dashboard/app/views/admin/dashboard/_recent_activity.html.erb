<h2>Latest Activity</h2>
<% if @recent_activity.any? %>
  <table id='recent_activity'>
    <% @recent_activity.each do |change| %>
      <tr class='<%= cycle("on", "on-hover") %>'>
        <%= activity_message_for change %>
      </tr>
    <% end %>
  </table>
<% else %>
  <p>
    Nothing has happened yet.
  </p>
<% end %>
