<div id='actions'>
  <ul>
    <li>
      <%= link_to "#{refinery_icon_tag( '/user_comment.png'} Update who gets notified",
          edit_admin_inquiry_setting_url(InquirySetting.notification_recipients) %>
    </li>
    <li>
      <%= link_to "#{refinery_icon_tag( '/email_edit.png'} Edit confirmation email",
                  edit_admin_inquiry_setting_url(InquirySetting.confirmation_body) %>
    </li>
  </ul>
</div>
<div id='records'>
  <% if @inquiry_settings.size > 0 %>
    <ul>
      <% @inquiry_settings.each do |setting| -%>
        <li class='clearfix record <%= cycle("on", "on-hover") %>'>
          <span class='title'>
            <span class='actions'>
              <%= link_to refinery_icon_tag("application_edit.png", :alt => "Edit"), edit_admin_inquiry_setting_path(setting) %>
              <%= link_to refinery_icon_tag("delete.png", :alt => "Delete"), admin_inquiry_setting_path(setting),
                                                                :class => "cancel confirm-delete" ,
                                :title => "Remove this inquiry setting forever"  if setting.destroyable? %>
            </span>
            <span><%=h setting.name %></span>
          </span>
        </li>
      <% end -%>
    </ul>
  <% end -%>
</div>
