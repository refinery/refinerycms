  <body class='login <%= I18n.locale %>'>
    <div id='tooltip_container'></div>
    <div id="login_container" class="clearfix">
      <header>
        <h1><%= yield :header %></h1>
      </header>
      <div id="page_container">
        <div id="page">
          <div id="content" class="clearfix">
            <div id="flash_container">
              <%= render '/refinery/message' %>
            </div>
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
