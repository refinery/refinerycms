<% if searching? %>
  <%= link_to t('cancel_search', :scope => 'refinery.admin.search'), refinery.admin_pages_path, :class => "cancel-search" %>
  <h2><%= t('results_for', :scope => 'refinery.admin.search', :query => h(params[:search])).html_safe %></h2>
<% end %>
<% if @pages.any? %>
  <%= render 'sortable_list' %>
<% else %>
  <p>
    <% unless searching? %>
      <strong><%=t('.no_pages_yet')%></strong>
    <% else %>
      <%= t('no_results', :scope => 'refinery.admin.search') %>
    <% end %>
  </p>
<% end %>
